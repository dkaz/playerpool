= form_for @game do |f|
  -if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :home
    = f.text_field :home
  .field
    = f.label :away
    = f.text_field :away
  .actions
    = f.submit 'Save'
